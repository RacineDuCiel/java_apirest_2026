meta {
  name: 01 - Register Alice (Paris)
  type: http
  seq: 1
}

post {
  url: http://localhost:8080/api/auth/register
  body: json
  auth: none
}

body:json {
  {
    "username": "alice_paris",
    "email": "alice@paris.com",
    "password": "SecurePass123",
    "address": {
      "street": "1 rue de la Paix",
      "postalCode": "75002",
      "city": "Paris",
      "country": "France"
    }
  }
}

assert {
  res.status: eq 201
  res.body.token: isDefined
  res.body.username: eq alice_paris
  res.body.email: eq alice@paris.com
}

script:post-response {
  bru.setEnvVar("token_alice", res.body.token);
}
