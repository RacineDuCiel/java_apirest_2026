meta {
  name: 08 - Login Alice
  type: http
  seq: 8
}

post {
  url: http://localhost:8080/api/auth/login
  body: json
  auth: none
}

body:json {
  {
    "username": "alice_paris",
    "password": "SecurePass123"
  }
}

assert {
  res.status: eq 200
  res.body.token: isDefined
  res.body.username: eq alice_paris
  res.body.email: eq alice@paris.com
}

script:post-response {
  bru.setEnvVar("token_alice", res.body.token);
}
