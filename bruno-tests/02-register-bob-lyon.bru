meta {
  name: 02 - Register Bob (Lyon)
  type: http
  seq: 2
}

post {
  url: http://localhost:8080/api/auth/register
  body: json
  auth: none
}

body:json {
  {
    "username": "bob_lyon",
    "email": "bob@lyon.com",
    "password": "MyPassword456",
    "address": {
      "street": "5 Place Bellecour",
      "postalCode": "69002",
      "city": "Lyon",
      "country": "France"
    }
  }
}

assert {
  res.status: eq 201
  res.body.token: isDefined
  res.body.username: eq bob_lyon
  res.body.email: eq bob@lyon.com
}

script:post-response {
  bru.setEnvVar("token_bob", res.body.token);
}
