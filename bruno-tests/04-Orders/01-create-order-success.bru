meta {
  name: Create Order - Success
  type: http
  seq: 1
}

post {
  url: http://localhost:8080/api/orders
  body: json
  auth: bearer
}

auth:bearer {
  token: {{aliceToken}}
}

body:json {
  {
    "items": [
      {
        "productId": {{productId}},
        "quantity": 1
      }
    ]
  }
}

assert {
  res.status: eq 201
  res.body.status: eq CREATED
}

script:post-response {
  bru.setEnvVar("orderId", res.body.orderId);
}
